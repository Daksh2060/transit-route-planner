{
    "compilerOptions": {
        "target": "es2022",
        "module": "commonjs",
        "lib": ["es2023", "dom"],
        "outDir": "build",
        "rootDir": "src",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "removeComments": true,
        "resolveJsonModule": true,
        "strict": true,        
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "./src/**/*"
    ]
}
